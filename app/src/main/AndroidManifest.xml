<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gxl.intelligentkitchen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme"
        >

        <activity
            android:name=".ui.activity.HomeActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            ></activity>

        <activity
            android:name=".ui.activity.FoodTypeActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.FoodTeachActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.SendDynamicActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.LoginActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            ></activity>

        <activity
            android:name=".ui.activity.RegisterActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            ></activity>

        <activity
            android:name=".ui.activity.FoodSearchActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.FoodSearchResultActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.FoodSearchTeachActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.FoodLoveActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.PhoneValidateActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            ></activity>

        <activity
            android:name=".ui.activity.MyDynamicActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.DynamicDetailActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name=".ui.activity.FoodTeachVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="true"
            android:screenOrientation="sensorLandscape"></activity>

        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />


        <activity
            android:name="cn.bmob.v3.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>

        <activity
            android:name=".ui.activity.FoodShowVideoActivity"
            android:configChanges="orientation"></activity>

        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />


        <activity
            android:name="me.iwf.photopicker.PhotoPickerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name="me.iwf.photopicker.PhotoPagerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="intelligentkitchen.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />


    </application>


</manifest>